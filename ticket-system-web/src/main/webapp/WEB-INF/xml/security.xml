<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http access-denied-page="/WEB-INF/pages/error403.jsp" use-expressions="true">
        <intercept-url pattern="/train/**" access="hasAnyRole('ROLE_MANAGER')"/>
        <intercept-url pattern="/station/**" access="hasAnyRole('ROLE_MANAGER')"/>
        <intercept-url pattern="/path/**" access="hasAnyRole('ROLE_MANAGER')"/>
        <intercept-url pattern="/trip/**" access="hasAnyRole('ROLE_MANAGER')"/>
        <intercept-url pattern="/user/**" access="hasAnyRole('ROLE_ADMIN')"/>
        <intercept-url pattern="/settings/**" access="isAuthenticated()"/>
        <form-login login-page="/login" default-target-url="/"
                    authentication-failure-url="/login"/>
        <logout logout-url="/logout" logout-success-url="/"/>

        <anonymous username="guest" granted-authority="ROLE_GUEST"/>
        <remember-me user-service-ref="loginService"/>
    </http>

    <authentication-manager>
        <authentication-provider user-service-ref="loginService">
            <password-encoder hash="sha-256"/>
        </authentication-provider>
    </authentication-manager>

</beans:beans>